# editorconfig.org

root = true

[/{*,.github/**}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[/*.md]
trim_trailing_whitespace = false

[/{config/**.php,public/*.php}]
indent_size = 4

[/{composer.*,*.xml,*.xml.dist}]
indent_size = 4
