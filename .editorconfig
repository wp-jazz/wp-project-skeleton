# editorconfig.org

root = true

# Jazz Coding Standards
[/{*,.github/**}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[/*.md]
trim_trailing_whitespace = false

[/{composer.*,*.xml,*.xml.dist}]
indent_size = 4

# WordPress Coding Standards
# See: https://core.trac.wordpress.org/browser/trunk/.editorconfig
[/{config/**,public/*}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
