{
    "type": "project",
    "name": "mcaskill/wp-jazz",
    "description": "A modern WordPress project boilerplate.",
    "license": "MIT",
    "keywords": [
        "jazz",
        "composer",
        "wordpress",
        "wp",
        "wp-config",
        "boilerplate"
    ],
    "support": {
        "source": "https://github.com/mcaskill/wp-jazz",
        "issues": "https://github.com/mcaskill/wp-jazz/issues"
    },
    "authors": [
        {
            "name": "Chauncey McAskill",
            "email": "chauncey@mcaskill.ca",
            "homepage": "https://mcaskill.ca"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.1",
        "oscarotero/env": "^2.1",
        "roots/bedrock-autoloader": "^1.0",
        "roots/bedrock-disallow-indexing": "^2.0",
        "roots/wordpress": "^6.0.1",
        "roots/wp-config": "^1.0.0",
        "roots/wp-password-bcrypt": "^1.1.0",
        "vlucas/phpdotenv": "^5.4",
        "wpackagist-theme/twentytwentytwo": "^1.2"
    },
    "require-dev": {
        "automattic/phpcs-neutron-ruleset": "^3.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "public/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "public/themes/{$name}/": [
                "type:wordpress-theme"
            ],
            "public/{$name}/": [
                "type:wordpress-dropin"
            ]
        },
        "wordpress-install-dir": "public/wordpress"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "roots/wordpress-core-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "tests": [
            "phpcs"
        ]
    }
}
